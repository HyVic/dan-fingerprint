{
  "compilerOptions": {
    "useDefineForClassFields": true,
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "skipLibCheck": true,
    "noEmit": true,
    // 添加的配置开始
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
      "target": "esnext",
      "module": "esnext",
      "moduleResolution": "node",
      "sourceMap": true,
      "allowSyntheticDefaultImports": true,
    
    //添加的配置结束
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/main.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ],
  "exclude": [
    "node_modules"
  ]
}
